.header
	&-page
		overflow: hidden
		@media $tablet 
			overflow: visible
		.header__list-item
			&._active
				position: relative
				&:after
					content: ''
					display: block
					width: 100%
					height: 20px
					background: $green
					position: absolute
					bottom: -78px
					@media $desktop
						bottom: -56px
					@media $desktopS
						bottom: -25px
					@media $tablet 
						display: none
	&__menu
		@media $tablet
			overflow-y: auto
			height: 250px
		&:hover .header__sublist
			display: block
		&:hover .header__list-item
			&:after
				display: none
	&__list
		display: flex
		justify-content: flex-end
		max-width: 950px
		position: relative
		&-item
			padding-left 50px
			display: flex
			margin-left auto
			position: relative
			//padding-bottom 40px
			//margin-bottom 40px
			cursor: pointer
			@media $tablet
				display: block
				padding-bottom 10px
				margin-left 0
				padding-left 15px
			> span
				color: $white
				font-weight: 700
				font-size: 15px
				line-height: 1.2em
				text-transform: uppercase
				@media $desktop
					font-size: 14px

	&__sublist
		position: absolute
		top: 100%
		display: none
		padding-top 40px
		
		@media $tablet
			position: relative
			//margin-top 10px
			padding-top 20px
		li
			color: $white
			padding-bottom 20px
			@media $tabletB
				padding-bottom 0
			&:hover
				color	$lightgreen
			&._active
				color: $lightgreen
			&._active
				a, span
					font-weight 700
			span
				font-weight 600
				font-size: 14px
				line-height: 1.4em
				cursor: pointer
				color: $white
				display: flex
				&:hover
					color: $lightgreen
				&:after
					content: ''
					width: 50px
					display: block
					height: 100%
					position: absolute
					top: 0
					left: -50px
			a
				font-weight 400
				font-size: 14px
				line-height: 1.4em
				cursor: pointer
				color: $white
				display: flex
				&:hover
					color: $lightgreen
				&:after
					content: ''
					width: 50px
					display: block
					height: 100%
					position: absolute
					top: 0
					left: -50px
