.header__list
	position: relative
.header-cirlce
	transform: rotate(-90deg)
	position: absolute
	bottom: 0
	right: 0


.cookie
	position: fixed
	bottom: 0
	right: 0
	left: 0
	z-index: 100
	&-wrap
		box-shadow: 0 0 5px rgba(black, 0.5)
		background: $white
		padding: 35px 70px
		@media $tablet
			padding: 30px 40px
		@media $phoneS
			padding: 20px
	&__inner
		display: flex
		justify-content: space-between
		@media $tablet
			flex-wrap: wrap
	&__text
		flex: 0 0 65%
		max-width: 65%
		font-size: 18px
		@media $tablet
			flex: 0 0 100%
			max-width: 100%
			font-size: 12px
	&__btn
		flex: 0 0 35%
		max-width: 35%
		display: flex
		@media $tablet
			flex: 0 0 100%
			max-width: 100%
			justify-content: center
			margin-top 20px
		&-inner
			display: flex
			margin-left auto
			@media $tablet
				margin-left 0
				text-align: center
			button
				border: solid 2px $default
				color: $default
				display: block
				height: 60px
				line-height: 60px
				width: 125px
				text-align: center
				font-weight: 700
				font-size: 18px
				transition: .3s
				@media $tablet
					font-size: 12px
					height: 40px
					line-height: 40px
				&.active, &:hover
					border: solid 2px $green
					color: $green
				+ button
					margin-left 20px
					@media $phoneS
						margin-left 10px
			

