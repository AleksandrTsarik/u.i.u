.header
	background-color: $header
	background-image: url('/f/img/header/bg1.jpg')
	background-position: -30% 0%
	background-repeat: no-repeat
	//position: fixed
	width: 100%
	left: 0
	top: 0
	z-index 100
	@media screen and (min-width: 2000px)
		background-position: 55% 00%
	@media screen and (max-width: 2000px)
		background-position: 30% 00%
	@media $desktopB
		background-position: -150px 00%
		background-size: 130%
	@media $desktopS
		background-position: -100px 0%
		background-size: 122%
	@media (min-width: 1024px) and (max-width: 1240px)
		background-position: calc(-170px + (-130 + 170) * ((100vw - 1024px) / (1240 - 1024))) 0%
	@media $tabletB
		background-size: 100%
		background-position: left 50px top 0
	@media $beforePhoneS
		background-position: left 80px top 0
		background-size: 150%
	@media $phoneS
		background-size: 210%
		background-position: left -20px top 0	
	&.is-drop
		@media $phone
			height: auto !important
		&::after
			content: ''
			display: block
			position: absolute
			right: 0
			bottom: 0
			background-image: url('/f/img/circle.svg')
			background-position: 0 100%
			background-repeat: no-repeat
			z-index 105
			width: 200px
			height: 200px	
	&__inner
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		@media $tablet
			align-items: center
	&-left
		flex-basis: 30%
		max-width: 30%

		@media (min-width: 1024px) and (max-width: 1320px)
			flex-basis: calc(22% + (30 - 22) * ((100vw - 1024px) / (1320 - 1024)))
			max-width: calc(22% + (30 - 22) * ((100vw - 1024px) / (1320 - 1024)))
		&__inner
			@media $tablet
				display: flex
				align-items:center
			@media $tablet
				padding-bottom 40px
		&__text
			color: #097EA3
			font-size: 22px
			line-height: 1.6em
			padding-top 30px
			font-weight: 400
			display: none
			text-transform: uppercase
			max-width: 260px
			@media $desktop
				font-weight: 600
				font-size: 16px
				text-transform: uppercase
				padding-top 0
				margin-top 40px
				max-width: 240px
			@media $tablet
				font-size: 8px
				display block
				margin-top 0
	&__logo
		width: 233px
		@media $desktop
			margin-right 20px
			max-width: 80%
		@media (min-width: 1024px) and (max-width: 1320px)
			width: calc(160px + (233 - 160) * ((100vw - 1024px) / (1320 - 1024)))
		@media $tablet
			height: 100px
			width: 100px
			max-width: 100px
		a
			display: block
			@media $tablet
				height: 100px
				width: 100px
	&-right
		display: flex
		flex-direction: column
		align-items: flex-end
		flex-basis: 70%
		max-width: 70%
		@media (min-width: 1024px) and (max-width: 1320px)
			flex-basis: calc(78% + (70 - 78) * ((100vw - 1024px) / (1320 - 1024)))
			max-width: calc(78% + (70 - 78) * ((100vw - 1024px) / (1320 - 1024)))
		.header-lens
			cursor: pointer
		&__label
			position: relative
			width: 0.1px
			height: 0.1px
			opacity 0
			transition: 1s
			button
				position: absolute
				top: 0
				right: 10px
				width: 0
		&__input
			background: $white
			font-size: 15px
			padding: 8px 30px 10px 10px
			border-radius: 5px
			width: 100%
			display: none
			&::placeholder
				color: $input
			&-img
				position: absolute
				top: -2px
				right: 12px
		&__info-input
			cursor: pointer
			&.show
				.header-lens 
					display: none
				.header-right__label
					width: 320px
					display: block
					height: auto
					opacity 1
					@media $beforePhoneS
						width: 100%
					input
						display: block
					button
						display: block
						width: auto
						top: 8px
		&__info
			display: flex
			align-items: center
			margin: 40px 0 45px auto
			justify-content: flex-end
			height: 35px
			@media (min-width: 1024px) and (max-width: 1320px)
				margin-top: calc(30px + (40 - 30) * ((100vw - 1024px) / (1320 - 1024)))
				margin-bottom: calc(35px + (45 - 35) * ((100vw - 1024px) / (1320 - 1024)))
			@media $tablet
				justify-content: flex-start
				margin: 10px 0 20px
				flex-wrap: wrap
				height: auto

			div + div
				margin-left 30px
				@media $tablet
					margin-left 0
			div
				text-transform: uppercase
				font-size: 12px
				font-weight: 700
				@media $tablet
					font-size: 14px
					flex: 0 0 100%
					max-width: 100%
					margin-bottom 10px
					&:last-child
						max-width: 50%
						order: 1
						@media $beforePhoneS
							max-width: 100%
							margin-top 20px
							margin-bottom 30px
					&:nth-child(1)
						order: 2
					&:nth-child(2)
						order: 3
					&:nth-child(3)
						order: 4
				a
					display: inline-flex
					position: relative
					text-decoration: none
					color: #55DBF9
					color: $darkblue
					transition: 0.3s
					&:hover
						color: $lightgreen		
	&-news
		@media $desktop
			overflow: hidden
		&__inner
			position: relative
			img
				height: auto
		&__img
			position: relative
		&__info
			position: absolute
			z-index 5
			top: 0
			left: 0
			bottom: 0
			right: 0
			max-width: 235px
			backdrop-filter: blur(30px) //----firefox не видит
			background: rgba(black, 0.8) 
			&:after
				content: ''
				position: absolute
				display: block
				background: $darkgray
				top: 0
				right: 0
				bottom: 0
				left: 0
				z-index: 0
				opacity 0.4
				
			@media $tablet
				//height: 75px
				max-width: 215px
				top: auto
				bottom: 0
				@media $tablet
					padding: 14px 30px
		&__date
			height: 50%
			font-size: 22px
			line-height: 1.1em
			font-weight: 400
			color: $white
			display: flex
			padding: 30px 45px
			position: relative
			z-index 5
			@media $tablet
				padding: 0
			span
				margin-top auto
		&__text
			height: 50%
			background: $darkgreen
			padding: 40px 45px
			color: $white
			font-size: 20px
			line-height: 1.3em
			font-weight 400
			position: relative
			z-index 5
			@media $tablet
				display: none


//--------header-slider
.header-slider
	position: absolute
	z-index 150	
	overflow: hidden
	bottom: 0
	right: 0
	height: 500px
	display: flex
	flex-direction: column
	justify-content: flex-end
	&--circle
		display: none
		position: absolute
		background-image: url('/f/img/circle.svg')
		background-position: 0 100%
		background-repeat: no-repeat
		z-index 105
		width: 200px
		height: 200px
		right: 0
		&.is-show
			display: block
	@media $desktop
		max-width: 81%
	&__inner 
		
	&-wrap
		@media $desktop
			//margin-top 50px
			margin-top 0
	@media $tablet
		width: 100%
	&-text
		display: none
		padding: 35px 30px 50px
		@media $phoneS
			padding: 25px 15px
		@media $tablet
			display: block
			background: $darkgreen
			color: $white

	&__title
		font-weight: 700
		font-size: 27px
		line-height: 1.2em
		margin-bottom 10px
		//padding-top 30px
	&__subtitle
		font-weight: 400
		font-size: 22px
		line-height: 1.3em
		margin-bottom 30px
	&__text
		font-weight: 400
		font-size: 22px
		line-height: 1.3em
		padding-bottom 60px

	.owl-stage
		display: flex
		.owl-item
			height: 100%
	.owl-dots
		display: flex
		position: absolute
		bottom: 45px
		left: 50%
		transform: translateX(-50%)
	.owl-dot
		background: $lightgreen !important
		width: 15px
		height: 15px
		border-radius: 50%
		display: block
		position: relative
		z-index: 155
		&.active
			background: $white!important
	.owl-dot + .owl-dot
		margin-left 15px
.header-news
	position: relative
	.header-left__text
		display: block
.b-header-slide
	display: none
	@media $tablet
		display: block
	&.show 
		display: block !important


.b-header-slide--desktop
	@media $tablet
		display: none !important


.content-wrapper--mobile
	height: 10px
	position: relative
	height: 224px
	@media $tablet
		padding: 0
	@media $desktop
		height: 300px


//-------burger-menu
.burger
	width: 25px
	height: 15px
	position: absolute
	top: 25px

	z-index 9999
	display: none	
	flex-direction: column
	justify-content: space-between
	transition: .4s
	@media $tablet
		display: flex
	div
		height: 2px
		width: 100%
		background: $white
		transition: .4s

.header-right__inner
	@media $tablet
		position: absolute
		background: $header
		left -5999px
		transition: .4s
		overflow-y: auto
		min-height: 100px
		top: 0
		width: 100%
		padding: 40px 0
		z-index 9999
		.header__list
			flex-direction: column
			li
				flex: 0 0 100%
				max-width: 100%
				margin-bottom 10px
		.header-right__info
			padding: 0 15px
			
.header-right
	&._active
		.header-right__inner
			left: 0
		.burger
			transition: .4s
			div
				position: absolute
				&:nth-child(2)
					display: none
				&:last-child
					transform: translateY(-50%) rotate(45deg)
					left: 0
					top: 50%
					transition: .4s
				&:first-child
					transform: translateY(-50%) rotate(-45deg)
					left: 0
					top: 50%
					transition: .4s
						

.header-news
	.header__list
		.header__list-item._active
			display: flex
			@media $tablet
				> a
					color: $blue
.header-news
	.header-left__text
		@media $tablet
			margin-top 0
			font-size: 8px
	@media $tablet
		.header-slider-wrap
			margin-top 0
		.content-wrapper--mobile
			height: auto
		.header-slider
			height: auto
			position: relative
			max-width: 100%

		.header-slider__inner
			height: auto
			width: 100%
		// .header-left
		// 	margin-bottom 50px

