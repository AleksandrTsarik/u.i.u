.b
	&-media
		&__list
			display: flex
			flex-wrap: wrap
			margin: 0 -20px
			@media $phone
				margin: 0
		&__item
			display: block
			flex: 0 0 50%
			max-width: 50%
			position: relative
			color: $black
			padding: 20px
			margin:  -20px 0 20px 0
			background: $white
			overflow: hidden
			transition: .3s
			@media $phone
				flex: 0 0 100%
				max-width: 100%
				padding: 20px 0
			&:hover
				.b-media__item-img
					background: rgba($input, 0.2)
				.b-media__item-img--bg
					transform: scale(1.05)
			&-title
				font-weight: 500
				font-size: 18px
				line-height: 1.1em
				color: $black
				padding-bottom 5px
			&-subtitle
				font-weight: 400
				font-size: 15px
				line-height: 1.1em
				color: $black
			&-img
				overflow: hidden
				border-radius: 10px
				height: 255px
				margin: 0 0 20px 0
				border: 1px solid #D4D4D4
				position: relative
				transition: .3s
				&--bg
					background-position: 50% 50%
					background-repeat: no-repeat
					background-size: cover
					height: 255px
					transition: .4s
					overflow: hidden
				img
					position: absolute
					left: 0
					top: 0
					right: 0
					bottom: 0
					margin: auto
					transition: .6s
					display: block
					z-index 0
