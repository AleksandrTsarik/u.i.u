.b
	&-page
		&__img-essay
			&:after
				content: ''
				background-image: url('/f/img/item1.png')
				padding-bottom 145px
				width: 100px
				@media $phone
					padding-bottom 90px
				@media $beforePhoneS
					right: 0
					padding-bottom 60px
				@media $phoneS
					padding-bottom 40px
	&-essay
		&__title
			position: relative

			&:after
				content: ''
				right: 0
				top: -60px
				background-image: url('/f/img/item1.png')
				padding-bottom 145px
				width: 100px
				@media $phone
					padding-bottom 50px
				@media $beforePhoneS
					top: -80px
					right: 0
		&-form
			&__foto
				&-preview
					position: absolute
					top: 0
					right: 0
					bottom: 0
					left: 0
					z-index: 0
					&.is-foto
						z-index: 1
				&-controls
					display: none
					position: absolute
					bottom: 20px
					width: 100%
					justify-content: center
					z-index: 2
					&.show 
						display: flex
					div
						flex: 0 0 30px
						color: transparent
						max-width: 30px
						height: 30px
						border: solid 1px $green
						background-color: $white
						background-repeat: no-repeat
						background-position: center center
						&:hover
							cursor: pointer
							background-color: #f1f1f1
						& + div 
							margin-left: 10px
					&--refresh
						background-image: url('/f/img/refresh-ico.svg')
					&--remove
						background-image: url('/f/img/basket-ico.svg')
				&-load
					input
						width: 0.1px
						height: 0.1px
						opacity: 0
						overflow: hidden
						color: transparent
						&:focus + label
							background: $input	
					label
						color: $green
						border: solid 1px $green
						font-weight: 700
						font-size: 18px
						line-height: 1,1em
						letter-spacing: -0.01em
						padding: 19px 24px
						transition: .4s
						background: $white
						&:hover
							background: $green !important
							color: $white !important
			&__btn
				button
					color: $green
					border: solid 1px $green
					font-weight: 700
					font-size: 18px
					line-height: 1,1em
					letter-spacing: -0.01em
					padding: 19px 24px
					transition: .4s
					background: $white
					&:hover
						background: $green
						color: $white
						label
							margin: -19px -24px
							padding: 19px 24px
				input
					width: 0.1px
					height: 0.1px
					opacity 0
				&--send
					margin-top 40px
					// input[type=file]
					// 	opacity: 0
					// 	position: absolute
					// 	pointer-events: none
			&__foto
				&-name
					padding: 0 0 30px 0
				&-img
					margin-bottom 20px
				&-text
					padding: 0 5% 25px
					margin-bottom 25px
				&-block
					border: solid 1px $input
					border-radius: 10px
					background: $white
					overflow: hidden
					position: relative
					display: block
					width: 100%
					min-height: 400px
					margin: 0 0 20px 0
					@media $phone
						max-width: 460px
						margin: 0 auto 20px
					.b-essay-foto
						object-fit: cover
						position: absolute
						top: 0
						right inherit0
						bottom: 0
						left: 0
						margin: auto
						width: 100%
						height: 100%						
						.b-essay-foto__block
							width: 30px
							height: 30px
							background: $shite
							border solid 1px $green
							position: absolute
							bottom: 20px
							left: 50%
							transform: translateX(-50%)
							div + div
								margin-left 10px


					&-inner
						position: absolute
						top: 50%
						transform: translateY(-50%)
						text-align: center
			&-block
				&__input
					border-bottom: solid 1px $input
					padding: 10px 4px 10px
					margin: 0 0 20px 0

					font-weight: 500
					font-size: 21px
					line-height: 1.1em
					color: $black
				&__name
					font-weight: 400
					font-size: 15px
					line-height: 1.2em
					color: $black
					padding-left 4px
			&__top
				display: flex
				margin: 0 -40px
				@media $phone
					margin: 0
					flex-wrap: wrap
			&__item
				padding: 0 40px
				flex: 0 0 50%
				max-width: 50%
				margin: 0 0 40px 0
				@media $phone
					padding: 0
					flex: 0 0 100%
					max-width: 100%
			&__bottom
				&-row
					margin: 0 0 20px 0
			&__textarea
				&-block
					margin-bottom 20px
					&:last-child
						margin-bottom 60px
				&-title
					font-weight: 400
					font-size: 15px
					line-height: 1.2em
					color: $black
					padding-bottom 20px
				textarea
					height: 30px
					//padding: 5px 0
					font-weight: 500
					font-size: 16px
					line-height: 1.5em
					color: $black
					border-bottom: solid 1px $input
					resize: vertical
			&__checkbox
				margin: 40px 0 0
				&-label
					font-weight: 400
					font-size: 15px
					line-height: 1,2em
					color: $black
					position: relative
					padding-left 35px
					display: block
				&-input
					appearance none
					-moz-appearance: none
					opacity 0
					width: 1px
					height: 1px
				&-checked
					width: 20px
					height: 20px
					border: solid 1px $green
					display: block
					border-radius: 2px
					position: absolute
					top: 0
					left: 0
				&-input:checked + &-checked
					background: $green
					//position: relative
					&:after
						content: ''
						display: block
						width: 13px
						height: 7px
						border-left: solid 2px $white
						border-bottom: solid 2px $white
						position: absolute
						left: 50%
						top: 40%
						text-align: center
						transform: translate(-50%,-50%) rotate(-45deg)
			&-bottom
				&__title
					font-weight 500
					font-size: 18px
					line-height: 1.3em
					color: $black
					padding-bottom 20px
				&-block
					padding-bottom 40px
					// &__title
					// 	font-weight 500
					// 	font-size: 18px
					// 	line-height: 1.3em
					// 	color: $black
					// 	padding-bottom 20px
					&-input
						display: flex
						// justify-content: space-between
						margin: 0 -10px
						@media $desktop
							flex-wrap: wrap
					&__label
						font-weight: 400
						font-size: 15px
						line-height: 1.5em
						color: $black

						display: block
						padding: 0 10px
					
						&:nth-child(1)
							flex: 0 0 12%
							max-width: 12%
							@media $desktop
								flex: 0 0 15%
								max-width: 15%
							@media $phone
								flex: 0 0 30%
								max-width: 30%
						&:nth-child(2)
							flex: 0 00 29%
							max-width: 29%
							@media $desktop
								flex: 0 0 60%
								max-width: 60%
							@media $phone
								flex: 0 0 70%
								max-width: 70%
						&:nth-child(3)
							flex: 0 0 39%
							max-width: 39%
							@media $desktop
								flex: 0 0 60%
								max-width: 60%
							@media $beforePhoneS
								flex: 0 0 100%
								max-width: 100%
						&:nth-child(4)
							flex: 0 0 10%
							max-width: 10%
							@media $desktop
								flex: 0 0 20%
								max-width: 20%
							@media $beforePhoneS
								flex: 0 0 50%
								max-width: 50%
						&:nth-child(5)
							flex: 0 0 10%
							max-width: 10%
							@media $desktop
								flex: 0 0 20%
								max-width: 20%
							@media $beforePhoneS
								flex: 0 0 50%
								max-width: 50%



