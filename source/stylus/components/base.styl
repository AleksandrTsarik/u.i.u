html,body,div,span,object,iframe,h1,h2,h3,h4,h5,h6,p,a,em,img,b,u,i,ol,ul,li,form,label,table,tbody,tfoot,thead,tr,th,td,input,textarea,button
	margin 0
	padding 0
	border none medium
html, body
	font-family 'Montserrat', Arial, sans-serif
	font-size 16px
	line-height 1.5
	background $white
	color $baseFont
html
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
img
	vertical-align bottom
	max-width: 100%
::-webkit-scrollbar
	@media $beforePhone
		width 10px
		height 5px
::-webkit-scrollbar-track
	@media $beforePhone
		box-shadow inset 0 0 5px #EEEEEE
::-webkit-scrollbar-thumb
	@media $beforePhone
		background-color #D6D6D6

*, *:focus, *:after, *:before
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-moz-box-sizing border-box
	box-sizing border-box
	outline none
input, textarea
	font-family 'Montserrat', Arial, sans-serif
	font-size 15px
	width: 100%
	background none
	border none medium
	resize none
	box-shadow none
	&::placeholder
		font-family 'Montserrat', Arial, sans-serif
		text-overflow ellipsis
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active
	-webkit-box-shadow: 0 0 0 30px white inset !important;
article,aside,footer,header,nav,section,canvas
	display block
	ol, ul
		list-style none
a, button, input[type="submit"], input[type="button"], input[type="reset"], label
	border none medium
	outline none
	cursor pointer
	background none
	-webkit-text-decoration-skip objects
a, a:active
	text-decoration none
	color $linkFont
	transition: .3s
	&:visited
		color: $linkVisited
	&:hover
		color: $linkHover


h1,h2,h3,h4,b,strong
	font-family 'Montserrat'
	font-weight normal
	color: $black
	padding: 0
	margin: 0
	
h1
	font-size: 34px
	font-weight 600
	line-height: 1.3em
	@media $phone
		font-size: 24px !important

h2
	font-size: 24px
	font-weight 600
	line-height: 1.3em
	@media $phone
		font-size: 18px!important
h3
	font-size: 22px
	line-height: 1.3em
	@media $phone
		font-size: 16px !important

h4
	font-weight: 500
	font-size: 18px
	line-height: 1.3em
	@media $phone
		font-size: 14px !important
		
b,strong
	font-family 'Montserrat', Arial, sans-serif
	font-weight bold
sub, sup
	font-size 75%
	line-height 0
	position relative
	vertical-align baseline
sub
	bottom -0.25em
sup
	top -0.5em
video
	display inline-block
svg:not(:root)
	overflow hidden

body
	// height: 100vh
	// display: flex
	// flex-direction: column
	&.open-menu
		overflow: hidden
	&.open-modal
		overflow: hidden
.page-container
	max-width 100%
	flex: 1 0 auto
.content-wrapper
	max-width 1440px
	margin 0 auto
	font-family 'Montserrat', Arial, sans-serif
	padding: 0 50px
	@media $phone
		padding: 0 20px
.fs--h1
	font-size: 22px
.b-title--h2
	font-size: 34px !important
	text-transform: uppercase
	@media $phone
		font-size: 24px!important
.d-none
	display: none


hr
	border: solid 1px $input

.js-vall, .js-email, .js-phone
	&.form-error
		border-bottom: solid $red 1px
		&::placeholder
			color: red
	&.form-success
		border-bottom: solid 1px $lightgreen
		

.b-list
	&__wrap
		display: flex
		margin: 0
		padding: 0 0 60px 0
		@media $tablet 
			flex-wrap: wrap
			margin: 0
	&__item
		padding: 0
		@media $tablet 
			padding: 0
		&:nth-child(1)
			flex: 0 0 65px
			max-width: 65px
			padding: 0
			@media $tablet 
				flex: 0 0 100%
				max-width: 100%
				padding-bottom 40px
				display none
		&:nth-child(2)
			padding-bottom 50px
			flex 0 0 calc(100% - 190px)
			max-width: calc(100% - 190px)
			padding: 0 35px
			@media $tablet 
				flex: 0 0 100%
				max-width: 100%
				padding: 0 0 50px
		&:nth-child(3)
			flex: 0 0 125px
			max-width: 125px
			padding: 0
			@media $tablet 
				flex: 0 0 100%
				max-width: 100%
		&-img
			width: 65px
			&--b
				margin-bottom 40px
.b-title
	font-weight: 600
	font-size: 34px
	line-height: 0.9em
	color: $black

	padding 60px 150px 65px 0
	@media $phone
		padding: 30px 100px 30px 0
	@media $beforePhoneS
		padding: 30px 0
	@media $phoneS
		padding: 25px 0 20px
	&-strip
		border-bottom: 1px solid rgba(black, 0.5)
		margin-bottom 50px
		@media $phone
			margin-bottom 10px

.b-page__img
	position: relative
	&:after
		content: ''
		display: block
		position: absolute
		right: 0
		top: 35px
		background-position: 100% 0%
		background-size: contain
		background-repeat: no-repeat
		@media $tablet
			top: 20px

.b-page
	.b-title-strip
		margin-top 40px

.b-back-link
	position: relative
	width: 60px
	height: 60px
	background: $green
	display: block
	transition: .4s
	//
	align-items: center
	@media $phone
		width: 50px
		height: 50px
	@media $beforePhoneS
		width: 40px
		height: 40px
	@media $tablet
		display: flex
		&:before
			content: 'Назад в раздел'
			width: 250px
			position: absolute
			display: block
			align-items: center
			left: 100%
			padding-left 10px
			color: $black
			font-weight: 400
			font-size: 18px
			line-height: 22px
			@media $beforePhoneS
				font-size: 15px
	&:after
		content: ''
		display: block
		position: absolute
		width: 40%
		height: 40%
		left: 60%
		top: 50%
		border-bottom: solid 2px $white
		border-left: solid 2px $white
		transform: translate(-50%,-50%) rotate(45deg)
		transition: .4s


	&:hover
		background: lighten($green, 15%)
	&:active
		background: $click

.b-block-text
	padding: 10px 50px
	position: relative
	font-style: italic
	margin: 10px 0
	@media $phone
		padding: 10px 45px
		margin: 20px 0
	&:before
		content: ''
		position: absolute
		top: 10px
		left: 10px
		background-image: url('/f/img/arrow-ico.svg')
		background-position: 50% 50%
		width: 25px
		height: 25px
		display: block
		transform: rotate(180deg)
		@media $phone
			top: 0
			left: 0

	&:after
		content: ''
		position: absolute
		bottom: 0
		right: 10px
		background-image: url('/f/img/arrow-ico.svg')
		background-position: 50% 50%
		width: 25px
		height: 25px
		@media $phone
			bottom: 0
			right: 0
.b-block-iframe
	position: relative
	width: 100%
	padding-top 56%
	margin-bottom 40px
	@media $phone 
		padding-bottom 60%
	iframe
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		background-color: $black

.b-link-color
	&--visited
		color: $linkVisited
	&--hover
		color: $linkHover

.b-page-subtitle
	h3
		font-weight: 600
		font-size: 21px
		line-height: 1.2em
		color: $black
		padding-bottom 45px

.b-nav-menu
	display: block
	
	ol, ul
		padding-left 30px
		padding-bottom 20px
		li
			padding: 5px 0
			line-height: 1.4em
			font-size: 15px
			a
				font-size: 15px
	&--type
		ol
			list-style-type auto
		ul
			list-style-type disc


.border-bottom
	border-bottom: solid 1px $input
	padding-bottom 40px
	margin-bottom 40px
	h2
		margin-bottom 20px
	h3
		padding-bottom 20px

.b-foto-text 
	font-weight: 400
	font-size: 12px
	line-height: 15px
	color: #919191
	padding-top 16px


.video-block
	margin:0 auto
	max-height:600px
	display:flex
	justify-content:center
	videoF
		@media screen and (max-width:600px)
			width: 100%
			

.f-form-block__btn
	&.active, &:hover
		border: solid 1px $green
		color: $green

.b-lead-menu__name
	font-size: 18px
	font-weight 700
	padding: 10px 0
.menu
	&__list
		list-style-type none
		&-disc
			list-style-type disc
			
		&-numb
			list-style-type decimal
		&-inside
			list-style-position: inside
			.menu__sublist
				padding-left 20px
		&-outside
			list-style-position: outside
			.menu__sublist
				padding-left 5px
		li
			font-size: 16px
			padding-bottom 10px
			a
				font-size: 16px
	&__sublist
		//padding-left 20px
		list-style-position: inside
		padding-bottom 10px
		padding-top 5px
		li
			position: relative
			&:before
				content: '-'
				padding-right 5px
.video-block
	background-color: $black

.f-form-block--check
	padding-bottom 30px
	.b-essay-form__checkbox
		margin: 0