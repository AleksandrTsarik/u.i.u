
.b
	&-tab
		border-bottom: solid 1px #CAC7C7
		&__content
			display: none
			padding-top 10px
			&-inner
				display: flex
			&-ico
				flex 0 0 30px
				max-width: 30px
				margin: 0 30px 0 0 
				@media $tabletB
					display: none
			&-text
				font-weight: 400
				font-size: 15px
				line-height: 1.4em
				color: $black
				p
					padding: 0 0 20px 0 
		&__name
			cursor: pointer
			font-weight: 500
			font-size: 18px
			line-height: 1.1em
			color: $black
			padding: 10px 10% 10px 0
			margin: 30px 0 0
			position: relative
			&:after
				content: ''
				position: absolute
				top: 10px
				right: 10px
				width: 15px
				height: 15px
				display: block
				border-left: solid 2px $green
				border-bottom: solid 2px $green
				transform: rotate(-45deg)
				transition: .3s
			&.__active
				&:after
					content: ''
					border-left: solid 2px $green
					border-bottom: solid 2px $green
					transform: rotate(135deg)
		