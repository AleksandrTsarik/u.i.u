.b
   &-popup
      position fixed
      width 100%
      height 100%
      left: 0
      top: 0
      background: rgba($black, 0.5)
      display: none
      z-index 999
      overflow: hidden
      &._active
         display: block
      &__wrap
         
         position absolute
         left 50%
         top 50%
         transform: translate(-50%, -50%)
         background: $white
         padding 70px 100px
         display: block
         z-index 9999
         border-radius: 16px
         box-shadow: 0px 4px 55px rgba(0, 0, 0, 0.25)
         @media $tabletB
            //padding: 70px 10px
            width: 80%
         @media $phone
            padding: 70px 20px 
         @media $beforePhoneS
            width: 90%
      &__text
         font-weight: 500
         font-size: 18px
         line-height: 1.3em
         text-align: center
         color: #000000

      &__inner
         text-align: center
      &__img
         padding-bottom 30px
      &__close
         width: 25px
         height: 25px
         position: absolute
         top: 20px
         right: 20px
         cursor: pointer
         &:after,&:before
            content: ''
            display: block
            width: 100%
            height: 2px
            background: $black
            position absolute
            top: 50%
            left: 0
         &:after
            transform: rotate(45deg)
         &:before
            transform: rotate(-45deg)
