.b-breadcrumbs
	// margin-bottom -45px
	margin-top 45px
	@media $tablet
		margin-bottom 20px
		margin-top 20px
	@media $phoneS
		margin: 10px 0
	&__wrapper
		padding 11px 0
		display flex
		flex-wrap wrap

		max-width: 76% //----new style

	&__item
		position relative
		font-size 14px
		line-height 1.4em
		color #A0AAD4
		padding-right 12px
		margin-right 10px
		&:after
			content ''
			position absolute
			right -5px
			top 10px
			width 10px
			height 1px
			font-size 10px
			line-height 12px
			background #A0AAD4
			transform rotate(-50deg)
		&:last-child
			padding-right 0
			margin-right 0
			&:after
				display none
	&__item a
		color #111B47
		transition: 0.1s
	&__item:hover a
		color $red

