.b
	&-vs
		&__overlay
			position fixed
			width 100%
			height 100%
			left: 0
			top: 0
			background: rgba(45, 49, 67, 0.6)
			display: none
			z-index 500
			&._active 
				display: block
		&__wrap 
			position: fixed
			width: 71%
			left: 50%
			top: 50%
			transform: translate(-50%, -50%)
			z-index: 600
			overflow: hidden
			display: none
			@media $tabletB
				width: 100%
			&._active
				display: block
		&__list
			position: relative
			.owl-stage
				display: flex
			.owl-nav
				@media $tabletB
					display: none
				button
					position: absolute
					top: 50%
					text-indent: -99999px
					position: absolute
					background-image: url('/f/img/arrow-slider.svg')
					background-position: 50% 50%
					background-repeat: no-repeat
					background-size: contain
					width: 25px
					height: 55px
			.owl-item
				position: relative
				display: flex;
				align-items: center;
			.owl-prev
				left: 0
				position: absolute
				transform: translateY(-50%)
			.owl-next
				right: 0
				position: absolute
				transform: translateY(-50%) rotate(180deg)
		&__item
			width: 100%			
			&-inner
				text-align: center
				background: $white
				display: block
				padding: 40px 30px
				width: 90%
				margin: 0 auto
				border-radius: 16px
				@media $tabletB
					width: 98%
				@media $phone
					padding: 20px 15px
		&__iframe
			margin-bottom 20px
			position: relative
			padding-top: 50%
			@media $phone
				padding-top 60%
			@media $beforePhoneS
				padding-top 70%
			iframe
				width: 100%
				height: 100%
				position: absolute
				left: 0
				top: 0
		&-text
			text-align: left
