.b
	&-network
		display: flex
		&__item
			width: 60px
			height: 60px
			border: solid 1px $gray
			position: relative
			display: block
			transition: 0.5s
			background: $white
			@media $phone
				width: 50px
				height: 50px
			@media $beforePhoneS
				width: 40px
				height: 40px

			img
				position: absolute
				left: 0
				right: 0
				top: 0
				bottom: 0
				margin: auto
				display: block
				transition: 0.5s
				@media $phone
					max-width: 80%
				@media $beforePhoneS
					max-width: 50%
			// &:hover img
			// 	transform: scale(1.05)
			&:hover
				background: #e9e9e9
		&__right
			@media $tablet 
				display: flex
			.b-network__item
				&:nth-child(1)
				// 	border-bottom: 0
					@media $tablet 
						border-bottom: solid 1px $gray
						border-right: 0
				&:nth-child(2)
					border-bottom: 0
					border-top: 0
					@media $tablet 
						border-bottom: solid 1px $gray
						border-top: solid 1px $gray
						border-right: 0
		&__left
			.b-network__item
				border-right: 0
